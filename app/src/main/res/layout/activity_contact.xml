<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactActivity">

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading ..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="10pt"
        android:id="@+id/profile_name"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/default_user"
        android:id="@+id/profile_contact"
        tools:ignore="UnknownIdInLayout" />
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/profile_contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fav_image"
        />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexe: ..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="10pt"
        android:id="@+id/profile_sexe"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@id/fav_image"
        />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="10pt"
        android:id="@+id/profile_phone"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@id/profile_sexe"
        />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@example.com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="10pt"
        android:id="@+id/profile_email"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@id/profile_phone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>